@using Domain.Options
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SportEvents.Domain.Ticket

@{
    ViewData["Title"] = "BuyTicket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    strong {
        color: #5F6F65;
        font-weight: bolder;
        padding-right: 3px;
        font-size: 1.1rem;
    }
    .btn{
        background-color: #5F6F65;
        color: #e1e8d7;
    }
    h2{
        color: #5F6F65;
        font-weight: bolder;
    }
    p{
        color: #e1e8d7;
        font-weight: bolder;
        font-size: 1rem;
    }
</style>
<div class="container py-4">
    <h2 >Ticket for: </h2>
    <div class="ticket-details py-2">
        <p><strong>Event:</strong>     @Model.Event.Name</p>
        <p><strong>Date:</strong>     @Model.Event.StartDate.ToString("MMMM dd, yyyy")</p>
        <p><strong>Location:</strong>     @Model.Event.Location</p>
        <p id="EventPrice"><strong>Price:</strong>     @Model.Event.EventPrice MKD</p>
    </div>

    <form asp-action="AddToShoppingCart" asp-controller="Ticket" method="post">
        <input type="hidden" asp-for="EventId"/>
        <input type="hidden" asp-for="UserId"/>

        <div class="form-group" style="margin-bottom: 16px;">
            <label asp-for="Quantity" class="control-label">
                <strong>Quantity:</strong>
            </label>
            <input asp-for="Quantity" class="form-control form-control-sm" type="number" min="1" value="1"
                   style="width: 100px; padding: 8px; border-radius: 8px; border: 1px solid #5F6F65;" />
            <span asp-validation-for="Quantity" class="text-danger" style="font-size: 0.9rem;"></span>
        </div>


        <div class="form-group py-3">
            <button type="submit" class="btn btn-dark" id="btn">Add to shopping cart</button>
        </div>
    </form>
</div>

