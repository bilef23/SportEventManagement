@model IEnumerable<SportEvents.Domain.Registration>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap">
<style>
    thead {
        background: #5F6F65;
        color: #e1e8d7;
        font-size: 1.2rem;
    }
    tbody tr{
        color:#5F6F65;
        font-size: 1.1rem;
    }
</style>
<h2 class="text-center my-4" style="color: #5F6F65;">My Registration List</h2>

<div class="container">
    <table class="table table-striped table-responsive">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participant)
            </th>
            <th class="text-center">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr style="color:  #5F6F65;">
                <td>
                    @item.RegistrationDate.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @item.Status
                </td >
                <td>
                    @item.Event.Description
                </td>
                <td>
                    @item.Participant.Email
                </td>
                <td class="text-center ">
                    <a class="btn btn-outline-light btn-sm" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>


